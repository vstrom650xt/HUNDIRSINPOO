
    public static Boolean putOnTab(int coordLett, int coordNum, char orientation, char[][] tablero, int[][] barcosJugador, int sizeShip) {

        //juego con las vidas de los barcos
        if (sizeShip == 2) {
            if (orientation == 'V') {
                tablero[coordLett][coordNum] = 'B';
                if (tablero[coordLett - 1][coordNum] > tablero.length || tablero[coordLett + 1][coordNum] < tablero.length) {
                    System.out.println("te sales del tablero");
                    return  false;                 
                } else {
                    tablero[coordLett + 1][coordNum] = 'B';
                    return  true;

                }
            } else if (orientation=='H'){
                tablero[coordLett][coordNum] = 'B';
                if (tablero[coordLett][coordNum +1] > tablero.length || tablero[coordLett + 1][coordNum] < tablero.length) {
                    tablero[coordLett][coordNum + 1] = 'B';
                    return  false;
                }else{
                    tablero[coordLett][coordNum + 1] = 'B';
                    return  true;

                } 

            }
        } else if (sizeShip == 3) {
            if (orientation == 'V') {
                tablero[coordLett][coordNum] = 'B';
                tablero[coordLett + 1][coordNum] = 'B';
                tablero[coordLett + 2][coordNum] = 'B';
                return  false;


            } else {
                tablero[coordLett][coordNum] = 'B';
                if (tablero[coordLett][coordNum + 1] > tablero.length || tablero[coordLett][coordNum + 1] < tablero.length) {
                    System.out.println("te sales del tablero");
                    return  false;


                } else {
                    tablero[coordLett][coordNum + 1] = 'B';
                    tablero[coordLett][coordNum + 2] = 'B';

                    return  false;

                }


            }

        }

    }